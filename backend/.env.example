# Example environment variables for Bin-Pay backend
# DO NOT commit real secrets to version control. Use this file as a template.

# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
# Example: mongodb://username:password@host:port/dbname
MONGODB_URI=mongodb://localhost:27017/binpay-app

# JWT Authentication
JWT_SECRET=[REDACTED_JWT_SECRET]
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=[REDACTED_JWT_REFRESH_SECRET]
JWT_REFRESH_EXPIRES_IN=30d

# Paystack Configuration
PAYSTACK_SECRET_KEY=[REDACTED_PAYSTACK_SECRET_KEY]
PAYSTACK_PUBLIC_KEY=[REDACTED_PAYSTACK_PUBLIC_KEY]
PAYSTACK_WEBHOOK_SECRET=[REDACTED_PAYSTACK_WEBHOOK_SECRET]

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP or Resend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=[REDACTED_SMTP_PASS]

# Alternative: Resend API key
RESEND_API_KEY=[REDACTED_RESEND_API_KEY]

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@binpay.ng
SUPER_ADMIN_PASSWORD=[REDACTED_SUPER_ADMIN_PASSWORD]

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=[REDACTED_TWILIO_ACCOUNT_SID]
TWILIO_AUTH_TOKEN=[REDACTED_TWILIO_AUTH_TOKEN]
TWILIO_PHONE_NUMBER=[REDACTED_TWILIO_PHONE_NUMBER]
