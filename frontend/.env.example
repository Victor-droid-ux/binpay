# Example environment variables for the Frontend (Next.js)
# Copy this file to `.env.local` and fill real values locally.

# Database (Neon/Postgres)
DATABASE_URL=[REDACTED_DATABASE_URL]

# Neon Auth / Clerk / Stytch-like keys
NEXT_PUBLIC_STACK_PROJECT_ID=[REDACTED_STACK_PROJECT_ID]
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=[REDACTED_STACK_PUBLISHABLE_CLIENT_KEY]
STACK_SECRET_SERVER_KEY=[REDACTED_STACK_SECRET_SERVER_KEY]

# Twilio SMS
TWILIO_ACCOUNT_SID=[REDACTED_TWILIO_ACCOUNT_SID]
TWILIO_AUTH_TOKEN=[REDACTED_TWILIO_AUTH_TOKEN]
TWILIO_PHONE_NUMBER=[REDACTED_TWILIO_PHONE_NUMBER]

# Paystack
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=[REDACTED_PAYSTACK_PUBLIC_KEY]
PAYSTACK_SECRET_KEY=[REDACTED_PAYSTACK_SECRET_KEY]
PAYSTACK_WEBHOOK_SECRET=[REDACTED_PAYSTACK_WEBHOOK_SECRET]

# Resend Email
RESEND_API_KEY=[REDACTED_RESEND_API_KEY]

# JWT Secret (if used on frontend for any local dev testing)
JWT_SECRET=[REDACTED_JWT_SECRET]

BCRYPT_SALT_ROUNDS=10

# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=[REDACTED_SENTRY_DSN]

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_NAME=Bin-Pay
ENVIRONMENT=development
